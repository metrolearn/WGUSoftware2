<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wguSoftware2.controllers.LoginCtrl">
   <columnConstraints>
      <ColumnConstraints />
