   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="290.0" prefWidth="287.0">
         <children>
            <TextField id="user_input" fx:id="user_txt_fld" layoutX="43.0" layoutY="55.0" promptText="User" />
            <Label id="welcome_lbl" fx:id="welcome_lbl" layoutX="43.0" layoutY="20.0" text="Welcome">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button id="sign_in_btn" fx:id="sign_in_btn" layoutX="165.0" layoutY="148.0" mnemonicParsing="false" onAction="#sign_in" text="Sign in" />
            <PasswordField id="password_input" fx:id="password_txt_fld" layoutX="43.0" layoutY="95.0" promptText="Password" />
            <CheckBox fx:id="lang_chk_bx" layoutX="14.0" layoutY="179.0" mnemonicParsing="false" onAction="#lang_chk_bx_clicked" text="Hablas Espanol" />
            <Label id="current_location_lbl" fx:id="current_location_lbl" layoutX="14.0" layoutY="259.0" text="Current Location">
